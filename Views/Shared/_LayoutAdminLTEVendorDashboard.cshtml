    <script>
        var pushnotif = [];

        function loopThroughNotif(arr) {
            for (var i = 0; i < arr.length; i++) {

                (function (i) {
                    setTimeout(function () {
                        let notif = new Notification("Wiggly Meetup Memo", {
                            body: arr[i].message
                        });
                        notif.onclick = (e) => {
                            window.location.href = arr[i].link;
                        };
                    }, 300);
                })(i);
            };
        }

        function loadNotification() {
            const loadNotif = new Promise(function (resolve, reject) {
                $.ajax({
                    url: "/Vendor/NotificationAPI/GetNotification",
                    success: function (data) {
                        resolve(data)
                    },
                    error: function (data) {
                        reject(data)
                    }
                });
            });

            loadNotif.then((data) => {
                //console.log(data);
                let template = document.querySelector('template#notif-template');
                var parent = document.querySelector('#notif-parent');

                parent.innerHTML = "";
                if (data.length > 0) {
                    $.each(data, function (i, item) {
                        let clone = template.content.cloneNode(true);

                        if (item.NotifType == "Push") {

                            if (item.PushNotifIsRead != "Read") {
                                pushnotif.push({ message: item.Message, link: "https://localhost:44349/vendor/page/MarkPushNotifAsRead?notifID=" + item.Id });
                            }
                        
                           
                        } else {
                            clone.querySelector("a").innerHTML = "<i class=\"fas fa-bell mr-2\"></i> " + item.Message;

                            parent.appendChild(clone);
                        }

                        
                    });

                    //let notf = new window.Notification("Wiggly Meetup Memo", {
                    //    body: "asdadadasd"
                    //});

                    //notf.onclick = (e) => {
                    //   window.location.href = "https://localhost:44349/sample?id=12";
                    //}
                    if (pushnotif.length > 0) {
                        loopThroughNotif(pushnotif);
                    }

                } else {
                    console.log("no comment");
                    parent.innerHTML = "<p>No notifications.</p>";
                }
            }).catch((data) => {
                var parent = document.querySelector('#notif-parent');
                parent.innerHTML = "<p>No notifications.</p>";

            });
        }

        $(document).ready(function () {
            loadNotification();
        });
    </script>

