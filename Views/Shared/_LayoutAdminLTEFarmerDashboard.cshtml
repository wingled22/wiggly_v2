    <script>
        function loadNotification() {
            const loadNotif = new Promise(function (resolve, reject) {
                $.ajax({
                    url: "/Farmer/NotificationAPI/GetNotification",
                    success: function (data) {
                        resolve(data)
                    },
                    error: function (data) {
                        reject(data)
                    }
                });
            });

            loadNotif.then((data) => {
                console.log(data);
                let template = document.querySelector('template#notif-template');
                var parent = document.querySelector('#notif-parent');

                parent.innerHTML = "";
                if (data.length > 0) {
                    $.each(data, function (i, item) {
                        let clone = template.content.cloneNode(true);

                        clone.querySelector("a").innerHTML = "<i class=\"fas fa-bell mr-2\"></i> " + item.Message;

                        parent.appendChild(clone);
                    });
                } else {
                    console.log("no comment");
                    parent.innerHTML = "<p>No notifications.</p>";
                }
            }).catch((data) => {
                console.log(data);
                parent.innerHTML = "<p>No notifications.</p>";

            });
        }

        $(document).ready(function () {
            loadNotification();
        });
    </script>

