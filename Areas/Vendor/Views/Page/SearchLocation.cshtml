@using Wiggly
@namespace Wiggly.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DevExtreme.AspNet.Mvc
@model List<Wiggly.Controllers.LivestockNames>;

@{
    ViewData["Title"] = "Search";
    Layout = "_LayoutAdminLTEVendorDashboard";
}


<h2 class="text-center display-4">Search</h2>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form action="SearchResults">
            <div class="input-group">
                <input type="search" name="addressString" class="form-control form-control-lg" placeholder="Search Location">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="input-group">
                <div class="col-md-8 offset-md-2 ">
                    @*<h6 class="text-left">Type of Livestock</h6>*@
                    @*@foreach (var item in Model)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="livestockType" id="livestockType" value="@item.Name" checked>
                            <label class="form-check-label" for="inlineRadio1">@item.Name</label>
                        </div>
                    }*@

                <div class="form-group">
                    <label for="livestockType">Type of Livestock</label>
                    <select class="form-control" name="livestockType">

                        @foreach (var item in Model)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }
                      
                    </select>
                </div>

                </div>
                <div class="input-group">
                    <div class="col-md-8 offset-md-2 ">
                        <b>Price Range</b>
                      
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="rFrom">From</label>
                                    <input type="number" class="form-control" name="rFrom" placeholder="From">
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="rTo">To</label>
                                    <input type="number" class="form-control" name="rTo" placeholder="To">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>