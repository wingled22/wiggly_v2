<style>
    .section {
        padding: 100px 0;
        position: relative;
    }

    .gray-bg {
        /*     background-color: #f5f5f5; */
    }

    .about-avatar img {
        max-width: 100%;
    }

    .about-avatar img {
        vertical-align: middle;
        border-style: none;
    }
    /* About Me
    ---------------------*/
    .about-text h3 {
        font-size: 45px;
        font-weight: 700;
        margin: 0 0 6px;
    }

    .about-text h6 {
        font-weight: 600;
        margin-bottom: 15px;
    }

    .about-text p {
        font-size: 18px;
        max-width: 450px;
    }

        .about-text p mark {
            font-weight: 600;
            color: #20247b;
        }

    .about-list {
        padding-top: 10px;
    }

